<%= notice %>
<div class="hero-unit">
  <h2>
      Users List
      <%= link_to "Create New User",new_user_path, :class => "btn btn-primary pull-right" %>
  </h2>   
  <table class="table table-strip ">
    <thead>
      <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>User Name</th>
      <th>Email Address</th>
      <th>Password</th>
      <th>Operation</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |u| %>
      <tr>
        <td></td>
        <td></td>
        <td><%= link_to u.name,u %></td>
        <td></td>
        <td><%= u.password%></td>
        <td>
          <%= link_to "Edit", edit_user_path(u), :class => "btn btn-info" %>
          <%= link_to "Delete",u,:method =>:delete, :class => "btn btn-danger" %>
        </td>
      <% end %>
      </tbody>
    </table>
    <%= link_to "Home",'/', :class => "btn btn-large btn-primary" %>
    <%= will_paginate  %>
  </div>
